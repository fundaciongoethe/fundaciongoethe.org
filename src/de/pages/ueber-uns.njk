              <!-- picture shortcode -->
              {%
                Picture patron.image, "aspect-square", "grayimg absolute inset-0 w-full
                h-full object-cover rounded-lg", patron.alt, "lazy"
              %}
            </div>
            <div class="text-lg leading-6 w-2/3">
              <h3 class="mb-2 font-semibold">{{ patron.name }}</h3>
              <p class="text-red-600 text-sm font-semibold uppercase">{{ patron.role }}</p>
