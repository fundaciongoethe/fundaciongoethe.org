              <!-- picture shortcode -->
              {%
                Picture patron.image, "bg-gray-200", "grayimg absolute inset-0 w-full
                h-full object-cover", patron.alt, "lazy"
              %}
            </div>

            <div
              class="py-1 lg:py-2 transform -translate-y-10 lg:-translate-y-16 space-y-2 bg-white rounded-md border w-56 2xl:w-72 mx-auto"
            >
              <div class="leading-6 text-center text-lg">
                <h3 class="mb-2 font-semibold">{{ patron.name }}</h3>
                <p class="text-red-600 text-sm font-semibold uppercase">{{ patron.role }}</p>
                <p class="text-gray-500 text-sm">{{ patron.period }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
