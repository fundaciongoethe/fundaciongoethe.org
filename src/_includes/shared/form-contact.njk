<div class="relative bg-white">
	<div class="lg:absolute lg:inset-0">
		<div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
			<div class="h-full w-full object-cover">
				{% Picture "./src/assets/images/hero/fundacion-mies.jpg","", "h-56
				w-full object-cover object-right lg:absolute lg:h-full", "Concierto en
				el Pabellon Mies" %}
			</div>
		</div>
	</div>
	<div
		class="
			relative
			py-16
			px-3
			lg:max-w-7xl lg:mx-auto lg:grid lg:grid-cols-2
			xl:px-16
			2xl:pl-24
		"
	>
		<div class="lg:pr-8">
			<div class="max-w-md mx-auto sm:max-w-lg lg:mx-0">
				<h2 class="standardtitel">
					{{ meta[locale].contact.title }}
				</h2>
				<p class="mt-3 standardtext sm:mt-4">
					{{ meta[locale].contact.text }}
				</p>
				<form
					name="kontakt-deutsch"
					action="/{{ locale }}/{{ meta[locale].contact.actionLink }}/"
					method="POST"
					data-netlify="true"
					class="mt-9 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8"
				>
					<div>
						<label for="first_name" class="block text-sm text-gray-900">{{
							meta[locale].contact.firstname
						}}</label>
						<div class="mt-1">
							<input
								type="text"
								name="first_name"
								id="first_name"
								autocomplete="given-name"
								class="
									block
									w-full
									shadow-sm
									sm:text-sm
									border-2 border-gray-300
									focus:ring-yellow-400 focus:border-yellow-400
									rounded-md
								"
							/>
						</div>
					</div>
					<div>
						<label for="last_name" class="block text-sm text-gray-900">
							{{ meta[locale].contact.lastname }}</label
						>
						<div class="mt-1">
							<input
								type="text"
								name="last_name"
								id="last_name"
								autocomplete="family-name"
								class="
									block
									w-full
									shadow-sm
									sm:text-sm
									border-2 border-gray-300
									focus:ring-yellow-400 focus:border-yellow-400
									rounded-md
								"
							/>
						</div>
					</div>
					<div class="sm:col-span-2">
						<div class="flex justify-between">
							<label for="email" class="block text-sm text-gray-900">
								{{ meta[locale].contact.email }}
							</label>
							<span
								id="email_description"
								class="text-sm text-red-600 font-semibold"
								>{{ meta[locale].contact.required }}</span
							>
						</div>

						<div class="mt-1">
							<input
								id="email"
								name="email"
								type="email"
								autocomplete="email"
								class="
									block
									w-full
									shadow-sm
									sm:text-sm
									border-2 border-gray-300
									focus:ring-yellow-400 focus:border-yellow-400
									rounded-md
								"
								required="required"
							/>
						</div>
					</div>

					<div class="sm:col-span-2">
						<label for="phone" class="block text-sm text-gray-900">{{
							meta[locale].contact.phone
						}}</label>

						<div class="mt-1">
							<input
								type="text"
								name="phone"
								id="phone"
								autocomplete="tel"
								aria-describedby="phone_description"
								class="
									block
									w-full
									shadow-sm
									sm:text-sm
									border-2 border-gray-300
									focus:ring-yellow-400 focus:border-yellow-400
									rounded-md
								"
							/>
						</div>
					</div>
					<div class="sm:col-span-2">
						<div class="flex justify-between">
							<label
								for="how_can_we_help"
								class="block text-sm text-gray-900"
								>{{ meta[locale].contact.message }}</label
							>
						</div>
						<div class="mt-1">
							<textarea
								id="how_can_we_help"
								name="how_can_we_help"
								aria-describedby="how_can_we_help_description"
								rows="4"
								class="
									block
									w-full
									shadow-sm
									sm:text-sm
									border-2 border-gray-300
									focus:ring-yellow-400 focus:border-yellow-400
									rounded-md
								"
							></textarea>
						</div>
					</div>

					<div class="text-right sm:col-span-2">
						<button
							type="submit"
							class="
								inline-flex
								justify-center
								py-2
								px-4
								border border-transparent
								shadow-sm
								text-sm
								rounded-md
								text-white
								bg-red-600
								hover:bg-black
							"
						>
							{{ meta[locale].contact.send }}
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
