---
layout: base
tags: pages
---

<!-- venues -->
{% set venueItems = helpers.filterCollectionByKeys(collections["venues_" +
locale], venue) %}

<!--  set to artistItems -->
{% set artistItems = helpers.filterCollectionByKeys(collections["artists_" +
locale], artist) %}

<main id="main">
  <div class="lg:mt-16 grid grid-flow-row grid-cols-5 grid-rows-1">
    <div
      class="
        col-span-5
        md:col-span-3
        {%
        if
        calendarLinks.isFutureEvent
        %}
        bg-yellow-200
        md:bg-yellow-300
        {%
        else
        %}
        bg-gray-200
        {%
        endif
        %}
        sm:rounded-tr-xl sm:mr-3
        md:mr-0
        px-3
        xl:pl-16
        2xl:pl-24
        md:pr-12
        lg:pr-36
        xl:pr-44
        py-12
      "
    >
      {% if calendarLinks.isFutureEvent %}

      <span class="text-sm text-red-600 font-bold tracking-wide uppercase">
        {{  date | date("Do MMMM yyyy", locale) }}
      </span>

      {% else %}
      <span
        class="
          text-sm text-gray-800
          bg-red-400
          px-2
          py-1
          rounded-sm
          font-bold
          tracking-wide
          uppercase
        "
      >
        {{ meta[locale].event.finished }}
      </span>
      {% endif %}

      <h1 class="standardtitel uppercase mt-2">{{ title }}</h1>
      <!-- wenn eventtype -->
      {% if type %}
      <h2 class="uppercase text-sm font-bold text-yellow-700">{{ type }}</h2>

      {% endif %}

      <!-- wenn infobox und zukunft -->
      {% if infobox and calendarLinks.isFutureEvent %} {%- include
      "components/infobox.njk" %} {% endif %}

      <div class="standardtext mt-12 prose">{{ content | safe }}</div>
    </div>

    <div
      class="
        col-span-5
        md:col-span-2
        bg-black
        text-white
        sm:rounded-t-2xl sm:ml-3
        md:ml-0
        transform
        lg:ml-2
        xl:ml-1
        2xl:ml-0
        md:-translate-x-8
        lg:-translate-x-28
        2xl:-translate-x-32
        sm:-mt-6
        md:mt-20
        py-4
        sm:py-10
        px-3
        xl:px-8
      "
    >
      <div class="py-2 sm:p-0">
        <dl
          class="sm:divide-y sm:divide-gray-800 text-sm lg:text-base uppercase"
        >
          <!-- <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs">
              {{ meta[locale].event.type }}
            </dt>
            <dd class="text-gray-50 col-span-3">{{ type }}</dd>
          </div> -->
          <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs">
              {{ meta[locale].event.date }}
            </dt>
            <dd class="text-gray-50 col-span-3">
              {{  date | date("dddd", locale) }},
              {{  date | date("LL", locale) }}
            </dd>
          </div>

          <!-- start and end only upcoming events -->
          {% if calendarLinks.isFutureEvent %}

          <!-- wenn opening time -->
          {% if opening %}

          <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs truncate">
              {{ meta[locale].event.entry }}
            </dt>
            <dd class="text-gray-50 col-span-3">
              {{ opening | date("HH:mm", locale) }} ({{
                meta[locale].event.start
              }}
              {{ date | date("HH:mm", locale) }})
            </dd>
          </div>

          {% else %}

          <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs">
              {{ meta[locale].event.start }}
            </dt>
            <dd class="text-gray-50 col-span-3">
              {{ date | date("HH:mm", locale) }}
            </dd>
          </div>

          {% endif %}
          <!-- wenn opening time ende -->
          <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs">
              {{ meta[locale].event.ending }}
            </dt>
            <dd class="text-gray-50 col-span-3">
              {{ ending | date("HH:mm", locale) }}
            </dd>
          </div>
          {% endif %}

          <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs">
              {{ meta[locale].event.artist }}
            </dt>
            <dd class="text-gray-50 col-span-3">
              {% for artist in artistItems %}
              {{ artist.data.title }}{% if not loop.last %}, {% endif %} {%
              endfor %}
            </dd>
          </div>

          <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs">
              {{ meta[locale].event.venue }}
            </dt>
            <dd class="text-gray-50 col-span-3">
              {% for venue in venueItems %}
              {{ venue.data.title }}
              {% endfor %} - {{ city }}
            </dd>
          </div>

          {% if deadline and calendarLinks.isFutureEvent %}
          <div class="py-4 grid grid-cols-5 sm:gap-4 items-center">
            <dt class="font-bold text-gray-400 col-span-2 text-xs truncate">
              {{ meta[locale].event.deadline }}
            </dt>
            <dd class="text-gray-50 col-span-3">
              {{  deadline | date("DD.MM.YYYY", locale) }}
            </dd>
          </div>

          {% endif %}
        </dl>
      </div>

      {% if program %}

      <div class="text-white pt-4 text-xs">
        <a
          href="/assets/pdf/{{ program }}"
          class="flex items-center hover:text-yellow-400"
          download
        >
          {% svg "bookwhite", "mr-2 h-5 w-5 text-white", "libro" %}
          {{ meta[locale].event.program }}
        </a>
      </div>

      {% endif %}

      <!-- calendar links -->
      {% if calendarLinks.isFutureEvent %} {%- include
      "partials/calendarLinks.njk" %}{% endif %}
    </div>
  </div>

  <div class="flex flex-col sm:flex-row border-b">
    {% for artist in artistItems %}

    <!-- ******************************* event artist logic *******************************  -->
    <!--  if more than 2 -->

    {% if artistItems | length > 2 %}
    <div class="sm:w-1/3">
      <div class="space-y-4">
        <div class="aspect-w-3 aspect-h-2">
          {% Picture artist.data.images.featured,"aspect-w-3 aspect-h-2",
          "object-cover filter grayscale", artist.data.images.alt %}
        </div>
        <div
          class="
            text-base
            max-w-prose
            mx-auto
            lg:max-w-lg lg:ml-auto lg:mr-0
            px-3
            pb-10
          "
        >
          <span
            class="
              text-sm text-orange-500
              font-bold
              tracking-wide
              uppercase
              mb-2
            "
          >
            KÃ¼nstler
          </span>
          <h2 class="standardtitel uppercase">
            {{ artist.data.title }}
          </h2>

          <div class="mt-8">
            <p>
              {{ artist.data.excerpt }}
            </p>
            <div class="rounded-md mt-8">
              <a href="{{ artist.url }}" class="blackbutton">
                {{ meta[locale].event.readmore }} {{ artist.data.title }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--  if more than 1 -->

    {% elseif artistItems | length == 2 %}
    <div class="sm:w-1/2">
      <div class="space-y-4">
        <div class="aspect-w-3 aspect-h-2">
          {% Picture artist.data.images.featured,"aspect-w-3 aspect-h-2",
          "object-cover filter grayscale", artist.data.images.alt %}
        </div>
        <div
          class="
            text-base
            max-w-prose
            mx-auto
            lg:ml-auto lg:mr-0
            px-3
            xl:pl-16
            sm:pr-6
            lg:pr-12
            xl:pr-20
            pt-4
            pb-10
          "
        >
          <span
            class="
              text-sm text-orange-500
              font-bold
              tracking-wide
              uppercase
              mb-2
            "
          >
            {{ meta[locale].event.artist }}
          </span>
          <h2 class="standardtitel uppercase">
            {{ artist.data.title }}
          </h2>

          <div class="mt-8">
            <p>
              {{ artist.data.excerpt }}
            </p>
          </div>
          <a href="{{ artist.url }}" class="blackbutton mt-8">
            {{ meta[locale].event.readmore }} {{ artist.data.title }}
          </a>
        </div>
      </div>
    </div>
    <!-- if 1  -->
    {% elseif artistItems | length == 1 %}

    <div class="relative w-full flex flex-col">
      <div class="sm:absolute sm:inset-0">
        <div class="sm:absolute sm:inset-y-0 sm:left-0 sm:w-1/2">
          {% Picture artist.data.images.featured,"", "filter grayscale w-full
          object-cover md:absolute h-72 sm:h-96 md:h-full",
          artist.data.images.alt %}
        </div>
      </div>
      <div
        class="
          relative
          pt-12
          pb-16
          px-3
          sm:pt-16
          lg:px-8
          sm:max-w-7xl sm:mx-auto sm:grid sm:grid-cols-2
        "
      >
        <div class="sm:col-start-2 sm:pl-3 xl:pl-12">
          <div
            class="
              text-base
              max-w-prose
              mx-auto
              sm:max-w-lg sm:ml-auto sm:mr-0 sm:pr-6
              lg:pr-10
              xl:pr-20
            "
          >
            <span
              class="
                text-sm text-orange-500
                font-bold
                tracking-wide
                uppercase
                mb-2
              "
            >
              {{ meta[locale].event.artist }}
            </span>
            <h2 class="standardtitel uppercase">
              {{ artist.data.title }}
            </h2>

            <div class="mt-8">
              <p>
                {{ artist.data.excerpt }}
              </p>

              <div class="rounded-md mt-8">
                <a href="{{ artist.url }}" class="blackbutton">
                  {{ meta[locale].event.readmore }} {{ artist.data.title }}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endif %}

    <!-- endfor -->
    {% endfor %}
  </div>

  <!-- venues -->
  {% for venue in venueItems %}
  <div class="relative flex flex-col">
    <div
      class="
        order-2
        relative
        pt-12
        pb-16
        px-3
        sm:pt-16
        md:max-w-7xl md:mx-auto
        grid grid-cols-1
        md:grid-cols-2
      "
    >
      <div class="md:col-start-1 xl:pl-12">
        <div
          class="text-base mx-auto md:ml-auto md:mr-0 sm:pr-6 lg:pr-16 xl:pr-20"
        >
          <span
            class="
              text-sm text-orange-500
              font-bold
              tracking-wide
              uppercase
              mb-2
            "
          >
            {{ meta[locale].event.venue }}
          </span>
          <h2 class="standardtitel uppercase">
            {{ venue.data.title }}
          </h2>

          <div class="mt-8">
            <p>
              {{ venue.data.excerpt }}
            </p>

            <div class="mt-8">
              <a href="{{ venue.url }}" class="blackbutton">
                {{ meta[locale].event.readmore }} {{ venue.data.title }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="order-1 md:absolute md:inset-y-0 md:right-0 md:w-1/2">
      <!-- picture shortcode -->
      {% Picture venue.data.images.featured,"", "filter grayscale w-full
      object-cover md:absolute h-72 sm:h-96 md:h-full", venue.data.images.alt %}
    </div>
  </div>
  {% endfor %}

  <!-- partners -->
  {% if partners %}

  <h2 class="standardtitel pt-20 px-3 lg:px-16">
    {{ meta[locale].event.thanks }}:
  </h2>

  <div class="mt-8 border-t border-b border-gray-300">
    <div class="relative mx-auto px-3 lg:px-16 bg-white">
      <div
        class="grid grid-cols-2 gap-0.5 md:grid-cols-7 divide-x divide-gray-300"
      >
        <!-- get current locale from meta.languages -->
        {% for partner in partners %}

        <figure>
          <a
            ref="nofollow"
            target="_blank"
            title="{{ meta[locale].event.visitWeb }} {{
              partnerarchiv[partner].name
            }}"
            href="{{ partnerarchiv[partner].url }}"
            class="
              buttonhover
              col-span-1
              flex
              justify-center
              py-6
              px-2
              filter
              grayscale
              hover:grayscale-0
              opacity-75
              hover:opacity-100
            "
          >
            {% Picture partnerarchiv[partner].logo,"", "lazy max-h-16",
            partnerarchiv[partner].name %}
          </a>
        </figure>

        {%- endfor -%}
      </div>
    </div>
  </div>
  {% endif %}
</main>

<!-- include event schema  -->
{%- include "schemas/event-schema.njk" %}
