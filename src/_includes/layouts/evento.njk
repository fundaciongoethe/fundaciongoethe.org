---
layout: base
tags: pages
---

<!-- venues -->
{% set venueItems = helpers.filterCollectionByKeys(collections["venues_" +
locale], venue) %}

<!-- artists -->
{% set artistItems = helpers.filterCollectionByKeys(collections["artists_" +
locale], artist) %}

<div class="pt-12 md:pt-0 lg:mt-16 grid grid-flow-row grid-cols-5 grid-rows-1">
	<div
		class="
			col-span-5
			md:col-span-3
			{%
			if
			calendarLinks.isFutureEvent
			%}
			bg-yellow-400
			{%
			else
			%}
			bg-gray-200
			{%
			endif
			%}
			sm:rounded-tr-xl
			sm:mr-3
			md:mr-0
			px-3
			xl:pl-16
			2xl:pl-24
			md:pr-12
			lg:pr-36
			xl:pr-44
			py-12
		"
	>
		{% if calendarLinks.isFutureEvent %}

		<span class="text-sm text-red-600 font-bold tracking-wide uppercase">
			Event am {{ event.data.date | date("Do MMMM yyyy", locale) }}
		</span>

		{% else %}
		<span
			class="
				text-sm text-gray-800
				bg-red-400
				px-2
				py-1
				rounded-sm
				font-bold
				tracking-wide
				uppercase
			"
		>
			Diese Veranstaltung ist bereits beendet
		</span>
		{% endif %}

		<h1 class="standardtitel uppercase mt-2">{{ title }}</h1>

		<!-- calendar links -->
		{% if calendarLinks.isFutureEvent %} {%- include
		"partials/calendarLinks.njk" %}{% endif %}

		<div class="standardtext mt-12 prose">{{ content | safe }}</div>
	</div>

	<div
		class="
			col-span-5
			md:col-span-2
			bg-black
			text-white
			sm:rounded-t-2xl
			sm:ml-3
			md:ml-0
			transform
			lg:ml-2
			xl:ml-1
			2xl:ml-0
			md:-translate-x-8
			lg:-translate-x-28
			2xl:-translate-x-32
			sm:-mt-6
			md:mt-20
			py-4
			sm:py-10
			px-3
			xl:px-8
		"
	>
		<div class="py-2 sm:p-0">
			<dl class="sm:divide-y sm:divide-gray-800 text-sm lg:text-base uppercase">
				<div class="py-4 grid grid-cols-5 sm:gap-4">
					<dt class="font-bold text-gray-400 col-span-2">
						{{ meta[locale].eventType }}
					</dt>
					<dd class="text-gray-50 col-span-3">{{ type }}</dd>
				</div>
				<div class="py-4 grid grid-cols-5 sm:gap-4 upprcase">
					<dt class="font-bold text-gray-400 col-span-2">
						{{ meta[locale].eventDate }}
					</dt>
					<dd class="text-gray-50 col-span-3">
						{{  date | date("dddd", locale) }}, {{  date | date("LL", locale) }}
					</dd>
				</div>
				<div class="py-4 grid grid-cols-5 sm:gap-4">
					<dt class="font-bold text-gray-400 col-span-2">
						{{ meta[locale].eventEntry }}
					</dt>
					<dd class="text-gray-50 col-span-3">
						{{ opening | date("HH:mm", locale) }} ({{
							meta[locale].eventStart
						}}
						{{ date | date("HH:mm", locale) }})
					</dd>
				</div>
				<div class="py-4 grid grid-cols-5 sm:gap-4">
					<dt class="font-bold text-gray-400 col-span-2">
						{{ meta[locale].eventDuration }}
					</dt>
					<dd class="text-gray-50 col-span-3">{{ duration }}</dd>
				</div>

				<div class="py-4 grid grid-cols-5 sm:gap-4">
					<dt class="font-bold text-gray-400 col-span-2">
						{{ meta[locale].eventArtist }}
					</dt>
					<dd class="text-gray-50 col-span-3">
						{% for artist in artistItems %}
						{{ artist.data.title }}{% if not loop.last %}, {% endif %} {% endfor
						%}
					</dd>
				</div>

				<div class="py-4 grid grid-cols-5 sm:gap-4">
					<dt class="font-bold text-gray-400 col-span-2">
						{{ meta[locale].eventVenue }}
					</dt>
					<dd class="text-gray-50 col-span-3">
						{% for venue in venueItems %}
						{{ venue.data.title }}
						{% endfor %}
					</dd>
				</div>
			</dl>
		</div>
	</div>
</div>

<div class="flex flex-col sm:flex-row border-b">
	{% for artist in artistItems %}

	<!-- event artist logic -->
	{%- include "components/event-artist.njk" %}

	<!-- endfor -->
	{% endfor %}
</div>

<!-- venues -->
{% for venue in venueItems %}
<div class="relative flex flex-col">
	<div
		class="
			order-2
			relative
			pt-12
			pb-16
			px-3
			sm:pt-16
			md:max-w-7xl
			md:mx-auto
			grid grid-cols-1
			md:grid-cols-2
		"
	>
		<div class="md:col-start-1 xl:pl-12">
			<div
				class="text-base mx-auto md:ml-auto md:mr-0 sm:pr-6 lg:pr-16 xl:pr-20"
			>
				<span
					class="text-sm text-orange-500 font-bold tracking-wide uppercase mb-2"
				>
					{{ meta[locale].eventVenue }}
				</span>
				<h2 class="standardtitel uppercase">
					{{ venue.data.title }}
				</h2>

				<div class="mt-8">
					<p>
						{{ venue.data.excerpt }}
					</p>

					<div class="mt-8">
						<a href="{{ venue.url }}" class="blackbutton">
							{{ meta[locale].eventMore }} {{ venue.data.title }}
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="order-1 md:absolute md:inset-y-0 md:right-0 md:w-1/2">
		<img
			class="
				filter
				grayscale
				w-full
				object-cover
				md:absolute
				h-72
				sm:h-96
				md:h-full
			"
			src="/assets/images/{{ venue.data.images.profile }}"
			alt="{{ venue.data.images.alt }}"
		/>
	</div>
</div>

{% endfor %}
