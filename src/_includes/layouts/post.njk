---
layout: home
---

<div class="mx-auto max-w-lg text-gray-900 mb-10 sm:my-20">
	{% if images.featured %}   <figure class="h-full w-full fade-in">
    <div class="mx-auto max-w-4xl relative">

      <img src="/assets/images/{{images.featured}}" alt="{{ images.alt }}" class="lazy w-full h-auto {% if grayscale %} grayimg {% endif %}"></img>

     <div
  class="absolute inset-0 	bg-gradient-to-b
	from-gray-50
	to-orange-50"
  style="mix-blend-mode: multiply"
></div>
    </div>
  </figure>
  {% endif %}

	<div
		class="text-right text-xs uppercase flex justify-end font-bold mr-5 mt-2"
	>
		<time datetime="{{ date | datetime }}"> {{ date | date("dddd, Do MMMM yyyy", locale) }}</time>
	</div>

	<h1 class="font-rock text-3xl sm:text-4xl px-2 py-6">
		{{ title }}
	</h1>

	<div class="prose prose-pink px-2">
		{{ content | safe }}
	</div>

	{# ===== Previous and Next ===== #}
	<div
		class="mt-12 px-2 mx-auto max-w-lg md:flex-row md:flex md:justify-between"
	>
		{% set previousPost = collections.noticia | getPreviousCollectionItem(page) %}
		{% set nextPost = collections.noticia | getNextCollectionItem(page) %}

		<div
			class="py-2 text-left sm:py-0 text-xs uppercase font-semibold text-pink-500"
		>
			{% if previousPost %}
			<a class="flex items-center" href="{{ previousPost.url }}">
				{% svg "arrow-left", "w-6 h-6 mr-1 transition duration-200 ease-in-out
				transform hover:-translate-x-1", "flecha" %}
				{{ previousPost.data.title }}</a
			>
			{% endif %}
		</div>

		<div
			class="py-2 text-right sm:py-0 text-xs uppercase font-semibold text-pink-500"
		>
			{% if nextPost %}
			<a class="flex items-center" href="{{ nextPost.url }}"
				>{{ nextPost.data.title }} {% svg "arrow-right", "w-6 h-6 rounded-full
				ml-1 transition duration-200 ease-in-out transform hover:translate-x-1",
				"flecha" %}
			</a>
			{% endif %}
		</div>
	</div>
</div>



		<!-- include blogpost schema  -->
		{%- include "schemas/blogpost-schema.njk" %}