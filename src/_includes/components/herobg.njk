<div class="absolute h-144">
	<div class="flex flex-col md:flex-row relative">
		<div
			class="
				p-3
				rounded-r-md
				bg-gray-50
				lg:bg-transparent
				relative
				flex
				w-11/12
				md:w-5/7
				xl:w-1/3
				mr-3
				xl:mr-12
			"
		>
			<div class="flex items-end justify-center">
				<div
					class="
						lg:ml-12
						2xl:ml-24
						mx-auto
						lg:row-start-1
						lg:col-start-1
						mt-24
						md:mt-28
						lg:mt-10
					"
				>
					<span
						class="
							text-base
							leading-6
							text-gray-100
							font-bold
							tracking-wider
							uppercase
						"
					>
						<span class="bg-red-600 px-3 py-1 rounded-md">{{
							herotext.badge
						}}</span>
					</span>
					<h1
						class="
							mt-4
							mb-6
							2xl:mb-8
							text-base
							md:text-xl
							lg:text-2xl
							xl:text-3xl
							tracking-tight
							text-gray-900
							font-semibold
							leading-tight
						"
					>
						{{ herotext.title }}
					</h1>
					<div class="text-sm xl:text-base text-gray-900">
						<p>
							{{ herotext.content }}
						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="lg:w-5/7 xl:w-4/7">
			<img
				class="h-56 md:h-auto w-full object-cover fade-in rounded-b-lg"
				src="/assets/images/hero/{{ heroimg.url }}"
				alt="{{ heroimg.alt }}"
				width="{{ heroimg.width }}"
				height="{{ heroimg.height }}"
			/>
		</div>
		<div
			class="
				absolute
				transform
				-rotate-90
				bottom-40
				-right-32
				md:-right-28
				xl:-right-24
				2xl:-right-20
				flex
				items-end
				justify-end
				text-sm
			"
		>
			<p
				class="
					font-semibold
					flex
					items-center
					justify-center
					bg-white
					rounded-md
					px-1
					xl:bg-transparent
				"
			>
				{# Display Social icons from _data/social.json #} {% for site in social
				%} {% if site.url %}
				<a
					aria-label="Link to {{ site.platform }}"
					alt="Link to {{ site.platform }}"
					class="
						transition
						duration-100
						ease-in-out
						transform
						px-1
						hover:scale-105
						text-black
						hover:text-red-500
					"
					href="{{ site.url | url }}"
					target="_blank"
					rel="noopener"
				>
					{% svg site.platform, "h-5 w-5 fill-current", site.platform, "aside"
					%}
				</a>
				{% endif %} {% endfor %} <span class="ml-3">@fundaciongoethe.org</span>
			</p>
		</div>
	</div>
</div>
