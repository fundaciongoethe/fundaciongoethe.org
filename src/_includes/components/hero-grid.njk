<div class="flex flex-col sm:flex-row relative mt-10 md:mt-0 lg:mt-16">
  <div class="px-3 mb-2 md:mb-0 rounded-r-md relative flex sm:w-1/3 mr-5 md:mr-8 xl:mr-12">
    <div class="flex items-center justify-center">
      <div class="mb-3 xl:mb-0 lg:ml-12 lg:pl-2 2xl:ml-20 mx-auto">
        <h1 class="standardtitel mb-3 2xl:mb-4 text-gray-900">
          {{ herogrid.title }}
        </h1>
        <div class="standardtext">
          <p>
            {{ herogrid.text }}
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="sm:w-2/3 px-3 lg:pr-10 xl:pr-16">
    <div class="grid grid-rows-2 grid-flow-col gap-2 md:gap-4 justify-items-end">
      <div class="row-span-1 rounded-md md:rounded-xl h-24 sm:h-48 w-full relative">
        <!-- picture shortcode -->
        {% Picture herogrid.images.featured1,"", "rounded-md md:rounded-xl absolute inset-0 w-full h-full object-cover
        ", herogrid.images.alt1, "eager" %}
      </div>

      <div class="col-span-3 bg-gradient-to-tr ounded-md md:rounded-xl h-24 sm:h-48 w-11/12 relative">
        <!-- picture shortcode -->
        {% Picture herogrid.images.featured2,"", "rounded-md md:rounded-xl absolute inset-0 w-full h-full object-cover
        ", herogrid.images.alt2, "eager" %}
      </div>

      <div class="row-span-1 col-span-2 brounded-md md:rounded-xl h-24 sm:h-48 w-full relative">
        <!-- picture shortcode -->
        {% Picture herogrid.images.featured3,"", "rounded-md md:rounded-xl absolute inset-0 w-full h-full object-cover
        ", herogrid.images.alt3, "eager" %}
      </div>

      <div class="mt-6 row-start-1 row-end-3 rounded-md md:rounded-xl h-44 sm:h-72 w-full relative">
        <!-- picture shortcode -->
        {% Picture herogrid.images.featured4,"", "rounded-md md:rounded-xl absolute inset-0 w-full h-full object-cover
        ", herogrid.images.alt4, "eager" %}
      </div>
    </div>
  </div>
</div>
