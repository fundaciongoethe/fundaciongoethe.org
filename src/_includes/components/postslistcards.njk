<section class="mt-12">
	<div class="relative pb-20">
		<div class="relative mx-auto max-w-7xl">
			<div
				class="grid gap-8 mx-auto mt-12 md:grid-cols-2 xl:grid-cols-3 lg:max-w-none"
			>
				{% for post in postslist | reverse %}

				<div class="flex flex-col overflow-hidden">
					<div class="flex-shrink-0 relative">
						<a href="{{ post.url | url }}">
							<img width="620" height="350" class="lazy object-cover grayimg
							{{ post.data.images.align }} w-full h-48" src={% if
							post.data.images.thumb %}"/assets/images/{{
								post.data.images.thumb
							}}"{% else %}"/assets/images/blog/crispina-molinilla-shoot.jpg"{%
							endif %} alt="{{ post.data.title }} vista previa">
							<div
								class="absolute inset-0 bg-gradient-to-b from-blue-50 to-blue-100"
								style="mix-blend-mode: multiply"
							></div>
						</a>
					</div>

					<div class="flex flex-col justify-between flex-1 px-2">
						<a href="{{ post.url | url }}" class="no-underline block">
							<h2 class="text-3xl font-rock text-gray-900 mt-4">
								{{ post.data.title }}
							</h2>

							<p class="prose mt-3">
								{{ post.data.excerpt }}
							</p>
						</a>

						<div
							class="flex items-center mt-12 uppercase justify-between text-xs font-bold"
						>
							<div class="flex leading-5">
								<time datetime="{{ post.date | datetime }}">
									{{ post.date | niceDateShort }}</time
								>
							</div>

							<p class="pt-0 mt-0 leading-5">
								<a
									title="Leer mÃ¡s: {{ post.data.title }}"
									href="{{ post.url | url }}"
									class="block bg-gray-900 text-gray-50 px-3 no-underline transition duration-200 ease-in-out transform hover:scale-105 hover:-translate-y-1 hover:text-white"
									>seguir leyendo</a
								>
							</p>
						</div>
					</div>
				</div>

				{% endfor %}
			</div>
		</div>
	</div>
</section>
