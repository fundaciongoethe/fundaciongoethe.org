{% elseif artistItems | length == 1 %}

<div class="relative w-full">
	<div class="lg:absolute lg:inset-0">
		<div class="lg:absolute lg:inset-y-0 lg:left-0 lg:w-1/2">
			<img
				class="filter grayscale object-cover w-full lg:absolute lg:h-full"
				src="/assets/images/{{ artist.data.images.profile }}"
				alt="{{ artist.data.images.alt }}"
			/>
		</div>
	</div>
	<div
		class="
			relative
			pt-12
			pb-16
			px-4
			sm:pt-16
			sm:px-6
			lg:px-8
			lg:max-w-7xl
			lg:mx-auto
			lg:grid lg:grid-cols-2
		"
	>
		<div class="lg:col-start-2 lg:pl-8">
			<div
				class="
					text-base
					max-w-prose
					mx-auto
					lg:max-w-lg
					lg:ml-auto
					lg:mr-0
					pr-24
				"
			>
				<span
					class="text-sm text-orange-500 font-bold tracking-wide uppercase mb-2"
				>
					{{ meta[locale].eventArtist }}
				</span>
				<h2 class="standardtitel uppercase">
					{{ artist.data.title }}
				</h2>

				<div class="mt-8">
					<p>
						{{ artist.data.excerpt }}
					</p>

					<div class="rounded-md mt-8">
						<a href="{{ artist.url }}" class="blackbutton">
							{{ meta[locale].eventMore }} {{ artist.data.title }}
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
