	<div class="space-y-4">
		<div class="aspect-w-3 aspect-h-2">
			<img
				class="object-cover filter grayscale"
				src="/assets/images/{{ artist.data.images.profile }}"
				alt="{{ artist.data.images.alt }}"
			/>
		</div>
		<div
			class="
				text-base
				max-w-prose
				mx-auto
				lg:max-w-lg
				lg:ml-auto
				lg:mr-0
				px-3
				md:pl-12
				lg:pl-16
				xl:pl-10
				2xl:pl-0
				sm:pr-6
				lg:pr-16
				xl:pr-24
				pt-4
				pb-10
			"
		>
			<span
				class="text-sm text-orange-500 font-bold tracking-wide uppercase mb-2"
			>
				{{ meta[locale].eventArtist }}
			</span>
			<h2 class="standardtitel uppercase">
				{{ artist.data.title }}
			</h2>

			<div class="mt-8">
				<p>
					{{ artist.data.excerpt }}
