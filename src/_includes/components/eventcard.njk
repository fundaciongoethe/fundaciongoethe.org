<section
	id="conciertos-futuro"
	class="flex flex-col mt-20 items-start justify-between p-2 sm:p-4 {{
		event.data.cardcolor
	}} mx-auto shadow-sm [ sm:h-80 sm:w-80 ][ xl:h-96 xl:w-96 ]"
>
	<div class="flex flex-col items-center justify-center w-12 text-center">
		<p class="font-rock text-5xl xl:text-6xl">
			{{ post.date | date("Do MMMM yyyy", locale) }}
		</p>

		<p
			class="
				text-base
				leading-6
				text-gray-100
				font-bold
				tracking-wider
				uppercase
				transform
				-translate-y-2
			"
		>
			<span
				class="bg-gray-900 px-1 xl:px-2 pb-0.5"
				>{{ post.date | date("MMM", locale) }}</span
			>
		</p>
	</div>

	<h2
		id="{{ event.data.title | slug }}"
		class="font-rock text-xl xl:text-2xl mb-1 mt-2"
	>
		{{ event.data.title }}
	</h2>

	<p class="text-sm xl:text-lg font-semibold">
		{{ event.data.description }}
	</p>

	{% if event.data.button %}

	<a
		href="{{ event.data.button.url }}"
		target="_blank"
		rel="nofollow"
		class="
			inline-flex
			items-center
			px-3
			py-1
			xl:px-4
			xl:py-2
			shadow-sm
			text-sm
			lg:text-base
			2xl:text-lg
			font-semibold
			no-underline
			text-gray-50
			bg-gray-900
			uppercase
			mt-2
			hover:-translate-y-1
			hover:text-white
		"
	>
		{% svg "external", "mr-2 h-5 w-5", "flecha" %} {{ event.data.button.text }}
	</a>

	{% endif %}

	<p class="text-xs font-bold uppercase mt-5">
		{% if event.data.type %}{{ event.data.type }} {% endif %}

		<span class="bg-gray-900 px-1 py-0.5 text-gray-50">
			{{ post.date | date("HH:mm", locale) }}
		</span>
	</p>
</section>
