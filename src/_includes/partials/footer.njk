<footer
	class="font-semibold bg-transparent px-2 sm:px-6 md:px-24 text-xs pb-16"
>
	<div
		class="
			py-4
			lg:py-1
			flex flex-col
			lg:flex-row
			md:items-center
			md:justify-between
		"
	>
		<div class="mt-2 lg:mt-0 md:order-1 uppercase">
			<p class="text-center text-gray-900">
				&copy; 2001 - {% year %} Fundación Goethe
				<a href="/aviso-legal/" class="text-gray-900 hover:text-red-600 mx-4">
					Aviso legal
				</a>

				<a href="/privacidad/" class="text-gray-900 hover:text-red-600">
					Política de privacidad
				</a>
			</p>
		</div>

		<div
			class="mt-2 lg:mt-0 flex justify-center items-center space-x-2 md:order-2"
		>
			{# Display Social icons from _data/social.json #} {% for site in social %}
			{% if site.url %}
			<a
				aria-label="Link to {{ site.platform }}"
				alt="Link to {{ site.platform }}"
				class="
					transition
					duration-100
					ease-in-out
					transform
					hover:-translate-y-1
					hover:scale-105
					text-yellow-400
					hover:text-gray-50
				"
				href="{{ site.url | url }}"
				target="_blank"
				rel="noopener"
			>
				{% svg site.platform, "h-5 w-5 fill-current", site.platform, "footer" %}
			</a>
			{% endif %} {% endfor %} <span class="ml-3">@fundaciongoethe</span>
		</div>
	</div>
</footer>
