<ul
	role="list"
	class="
		grid
		sm:grid-cols-2
		gap-x-4 gap-y-8
		md:grid-cols-3
		sm:gap-x-6
		lg:grid-cols-4
		xl:gap-x-8
	"
>
	<!-- loop -->
	{% for artist in artists %}

	<li class="relative">
		<a href="{{ artist.url }}">
			<div
				class="
					group
					block
					w-full
					aspect-w-10 aspect-h-7
					rounded-md
					bg-gray-100
					overflow-hidden
					transform
					hover:-translate-y-1
					hover:scale-105
					motion-reduce:transition-none motion-reduce:transform-none
					transition
					duration-300
					ease-in-out
				"
			>
				<img
					src="/assets/images/{{ artist.data.images.profile }}"
					alt="{{ artist.data.images.alt }}"
					class="object-cover filter grayscale"
				/>

				<span class="sr-only">
					{{ meta[locale].event.readmore }} {{ artist.data.title }}</span
				>
			</div></a
		>
		<h2 class="mt-2 block text-base font-semibold truncate uppercase">
			<a
				class="no-underline hover:underline"
				tabindex="-1"
				href="{{ artist.url }}"
				>{{ artist.data.title }}</a
			>
		</h2>
		<p
			class="
				block
				text-xs text-orange-500
				font-semibold
				tracking-wide
				uppercase
			"
		>
			{{ artist.data.occupation }}
		</p>
	</li>

	{%- endfor -%}
</ul>
